<h1>Leave a review for <%= @review.movie.title %></h1>

<%= form_for(@review) do |f| %>
    <%= render partial: 'layouts/errors', locals: {object: @review} %>
    
    <%= f.hidden_field :movie_id %>

    <%= f.label :title, "Title" %>
    <%= f.text_field :title, placeholder: "Title." %>
    
    <%= f.label :comment, "Review" %>
    <%= f.text_field :comment, placeholder: "Tell us what you think." %>
    <br>
    <br>
    <%= f.submit "Submit" %>
<% end %>